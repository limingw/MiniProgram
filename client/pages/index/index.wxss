/**
***登录用户金额****
**/
.userinfo-money{
    float: right;
    margin:0rpx 0rpx;
}
/**
***登录用户签到按钮****
**/
.userinfo-sign{
    width: 120rpx;
    height: 60rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    float: right;
    margin:12rpx 0rpx 12rpx 10rpx;
    vertical-align:middle;
    border-radius: 3px;
    background-color: #4ec1e8;
    color: white;
}
.userinfo-allmoney{
    margin-right: 26rpx;
    font-size: 32rpx;
}

/**
***图片轮播层****
**/
.broadcast{
    height: 290rpx;
    padding-bottom: 10rpx;
    margin:100rpx 0rpx 10rpx 0rpx;
    text-align: center;
    border-bottom:1px solid #d5dbe9;
    /* position: relative;
    top:100rpx; */
}
.broadcast-img{
    width: 100%;
    height: 270rpx;
    border-radius: 5px;
}
.broadcast-swiper{
    height: 270rpx;
    margin: 0rpx 20rpx;
}

.scroll-data{
    line-height: 42rpx;
    height: 42rpx;
    font-size: 32rpx;
    overflow: hidden;
    display: inline-block;
    position: absolute;
    top: 18rpx;
    left: 570rpx;
    color: #000000;
}

.scroll-num{
    width:26rpx;
    display:inline-block;
    position: relative;
    top:0rpx;
}

.unit-num{
    height: 42rpx;
    overflow: hidden;
    display: block;
}

.commachar{
    width:56rpx;
    display:inline-block;
    position: relative;
    vertical-align: top;
}