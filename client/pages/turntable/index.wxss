/**
***转盘样式***
**/
.turntable{
  width: 100%;
  height: 750rpx;
  position: relative;
  background-image: url('../assets/images/cjbg.png');
  background-size: 100% 100%;
  top: 30rpx;
}
.content{
  position: absolute;
    width: 100%;
    height: 600rpx;
    margin: 0 auto;
    padding-top: 280rpx;
    z-index: 999;
    /* display: flex;
    align-items: center;
    justify-content: center; */
  }
  .canvasI{
    width: 500rpx;
    height: 500rpx;
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto auto;
    transition:all 3s ease;
  }
  .canvasII{
    width: 600rpx;
    height: 600rpx;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto auto;
  }
  .start{
    position: absolute;
    width: 145rpx;
    height: 185rpx;
    top: 0;
    bottom: 10rpx;
    left: 0;
    right: 0;
    margin: auto auto;
  }
  .turntable_text{
    position: absolute;
    top: 80rpx;
    bottom: 0rpx;
    left: 30rpx;
    right: 0;
    margin: auto auto;
    font-size: 45rpx;
    color: #ffffff;
  }

